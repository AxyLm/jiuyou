/* pages/index.wxss */

.body {
    height: 100vh;
    background-color: #fff;
    padding-top: constant(safe-area-inset-top); /*兼容 IOS<11.2*/
    margin-top: env(safe-area-inset-top); /*兼容 IOS>11.2*/
}

.top_banner {
    height: 400rpx;
    width: 750rpx;
    background-color: #f5f5f5;
    overflow: hidden;
    margin-bottom: 80rpx;
}

.top_banner .img {
    width: 100%;
    height: 100%;
}

.lives {
    width: 100%;
    /* padding: 10rpx 21rpx; */
    border-bottom: 1rpx solid #e3e3e3;
}

.lives-content, .lives-time {
    margin-bottom: 15rpx;
}
.lives-content-text{
    margin-bottom: 30rpx;
}
.lives-time {
    margin-top: 10px;
    color: #8c8c8c;
    font-size: 22rpx;
}

.lives-footage{
    padding-left: 2rpx;
}
.footage-item {
    width: 225rpx;
    height: 225rpx;
    margin:0 2rpx;
    margin-bottom: 4rpx;
    display: inline-block;
}
.footage-item image{
    vertical-align:bottom
}
.lives-footage {
    width: 100%;
    height: 100%;
    /* min-height: 350rpx; */
}

.end-text{
    font-size: 20rpx;
    text-align: center;
    color: #8c8c8c;
    line-height: 50rpx;
    margin-bottom: 20rpx;
}